@model List<ResultBottomGridDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Alt Izgara Listesi</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">İkon</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Açıklama</th>
                        <th scope="col" class="text-end"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.BottomGridID</th>
                            <td>@item.Icon</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>

                            <td class="text-end">
                                <div class="dropdown">
                                    <a class="btn btn-sm btn-icon-only text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-ellipsis-v"></i>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                        <a class="dropdown-item" href="/BottomGrid/UpdateBottomGrid/@item.BottomGridID"><i class="fa fa-pen mx-0"></i> Güncelle</a>
                                        <a class="dropdown-item" href="/BottomGrid/DeleteBottomGrid/@item.BottomGridID"><i class="fa fa-trash mx-0"></i> Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-primary col-12" href="/BottomGrid/CreateBottomGrid"><i class="fa fa-plus mx-0"></i> Yeni Alt Izgara Ekle!</a>
        </div>
    </div>
</div>
