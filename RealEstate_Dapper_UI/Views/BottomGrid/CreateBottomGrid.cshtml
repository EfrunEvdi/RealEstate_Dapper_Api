@model CreateBottomGridDto

@{
    ViewData["Title"] = "CreateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Alt Izgara Ekleme Formu</h6>
        <form method="post">
            <div class="row mb-3">
                <label class="col-2 col-form-label">İkon</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Icon">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Başlık</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Title">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Açıklama</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Description">
                </div>
            </div>
            <button type="submit" class="btn btn-primary col-12">Yeni Alt Izgara Ekle!</button>
        </form>
    </div>
</div>

