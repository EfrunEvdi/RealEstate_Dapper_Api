@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">İlan Ekleme Formu</h6>
        <form method="post">
            <div class="row mb-3">
                <label class="col-2 col-form-label">İlan Başlığı</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="title">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Şehir</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="city">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">İlçe</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="district">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Kategori</label>
                <div class="col-10">
                    @Html.DropDownListFor(x => x.categoryId, (IEnumerable<SelectListItem>)ViewBag.v, "Kategori seçiniz", new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Fiyat</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="price">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Tür</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="type">
                </div>
            </div> 
            <div class="row mb-3">
                <label class="col-2 col-form-label">Kapak Fotoğrafı</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="coverimage">
                </div>
            </div> 
            <div class="row mb-3">
                <label class="col-2 col-form-label">İlan Açık Adres</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="address">
                </div>
            </div>
            <button type="submit" class="btn btn-primary col-12">Yeni İlan Ekle!</button>
        </form>
    </div>
</div>