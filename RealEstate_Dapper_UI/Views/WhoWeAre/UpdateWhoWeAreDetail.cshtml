@model UpdateWhoWeAreDetailDto

@{
    ViewData["Title"] = "UpdateWhoWeAreDetail";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">"Biz Kimiz?" Güncelleme Formu</h6>
        <form method="post">
            <input type="hidden" asp-for="WhoWeAreDetailID" />
            <div class="row mb-3">
                <label class="col-2 col-form-label">Başlık</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Title">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Alt Başlık</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="SubTitle">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Açıklama 1</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Description1">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-2 col-form-label">Açıklama 2</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Description2">
                </div>
            </div>
            <button type="submit" class="btn btn-primary col-12">"Biz Kimiz?"i Güncelle!</button>
        </form>
    </div>
</div>