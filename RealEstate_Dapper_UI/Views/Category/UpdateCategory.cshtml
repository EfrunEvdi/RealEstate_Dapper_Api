@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kategori Güncelleme Formu</h6>
        <form method="post">
            <input type="hidden" asp-for="CategoryID" />
            <div class="row mb-3">
                <label class="col-2 col-form-label">Kategori Adı</label>
                <div class="col-10">
                    <input type="text" class="form-control" asp-for="Name">
                </div>
            </div>
            <button type="submit" class="btn btn-primary col-12">Kategoriyi Güncelle!</button>
        </form>
    </div>
</div>